<Window x:Class="Seven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seven"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">

    <Grid>
        <TabControl HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="792" Background="Black" FontWeight="Bold">

            <!-- TABS -->
            <TabItem x:Name="HomeTab" Header="Home">
                <Grid Background="#FFE5E5E5" Name="HomeControl"/>
            </TabItem>


            <TabItem x:Name="BookTab" Header="Book"
                     Height="Auto">

                <local:ucBook x:Name="ucBook"
                              Height="480" Width="Auto"></local:ucBook>

            </TabItem>
        </TabControl>

    </Grid>
</Window>
