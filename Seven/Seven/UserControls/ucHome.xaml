<UserControl x:Class="Seven.ucHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Seven"
             mc:Ignorable="d" 
             Height="Auto" d:DesignWidth="800">

    <Grid Name="HomeControl"
          Background="#FFE5E5E5" Margin="0,0,-270,0" Height="561">

        <Label x:Name="LbDBPath" Content="Database path :" 
               HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="92"/>

        <TextBox x:Name="TbDBPath"
                 HorizontalAlignment="Left" Height="23" Margin="107,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"/>

        <Button x:Name="BtBrowse" Content="Browse..."
                HorizontalAlignment="Left" Margin="554,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.365,0.67" Height="26" 
                Click="BtBrowse_Click">
        </Button>

    </Grid>
</UserControl>
